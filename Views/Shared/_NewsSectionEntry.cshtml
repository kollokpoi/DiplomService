
@model int;
<div class="d-flex align-items-center sectionBlock position-relative">
    <div class="my-2 me-2">
        <label for="Sections[@Model].ImageFile" class="control-label">Изображение</label>
        <div class="form-group">
            <img src="/Images/camara.png" alt="Image" class="item-block__image previewImage">
            <input name="Sections[@Model].ImageFile" style="display:none" accept=".png, .jpg, .jpeg, .gif" type="file" class="previewImageInput" placeholder="" />
            <p class="login-form__submit pointer-event text-center previewImageButton">Выберите файл</p>
        </div>

    </div>
    <div class="w-75">
        <label name="Sections[@Model].Name" class="control-label">Заголовок</label>
        <div class="d-flex align-items-center">
            <div class="form-group my-2 w-100">
                <input name="Sections[@Model].Name" class="login-form__input textarea-input" />
            </div>
            <div class="ms-2">
                <input type="hidden" name="Sections[@Model].ToDelete" />
                <div class="deleteBtn" data-index="@Model">
                </div>
            </div>
        </div>

        <div class="form-group my-2">
            <label for="Sections[@Model].Description" class="control-label">Содержание</label>
            <textarea name="Sections[@Model].Description" class="login-form__input textarea-input"></textarea>
        </div>
    </div>
</div>

